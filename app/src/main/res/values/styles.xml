<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="handCardSmall">
        <item name="android:layout_height">@dimen/card_height_medium</item>
        <item name="android:layout_marginRight">@dimen/horizontal_spacing</item>
    </style>

    <style name="smallCardRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/horizontal_spacing</item>

    </style>

</resources>
