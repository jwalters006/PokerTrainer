<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bet_change_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/place_bet" />

        <Button
            android:id="@+id/decrease_bet_button"
            android:layout_width="@dimen/change_bet_button_width_and_height"
            android:layout_height="@dimen/change_bet_button_width_and_height"
            android:layout_toLeftOf="@id/bet_change_dialog"
            android:text="-" />

        <Button
            android:id="@+id/increase_bet_button"
            android:layout_width="@dimen/change_bet_button_width_and_height"
            android:layout_height="@dimen/change_bet_button_width_and_height"
            android:layout_toRightOf="@id/bet_change_dialog"
            android:text="+" />

    </RelativeLayout>

</LinearLayout>