<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.rallymonkey911.android.pokertrainer.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/default_text"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/card_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sample_text"
        android:layout_centerInParent="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/card_height"
            android:layout_marginLeft="@dimen/horizontal_spacing"
            android:layout_marginRight="@dimen/horizontal_spacing"
            android:contentDescription="@string/card_image" />

        <ImageView
            android:id="@+id/card_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/card_height"
            android:layout_marginRight="@dimen/horizontal_spacing"
            android:contentDescription="@string/card_image" />

        <ImageView
            android:id="@+id/card_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/card_height"
            android:layout_marginRight="@dimen/horizontal_spacing"
            android:contentDescription="@string/card_image" />

        <ImageView
            android:id="@+id/card_four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/card_height"
            android:layout_marginRight="@dimen/horizontal_spacing"
            android:contentDescription="@string/card_image" />

        <ImageView
            android:id="@+id/card_five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/card_height"
            android:layout_marginRight="@dimen/horizontal_spacing"
            android:contentDescription="@string/card_image" />

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_hand" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list"
        android:layout_centerHorizontal="true"
        android:text="@string/clear_button_text" />

</RelativeLayout>

